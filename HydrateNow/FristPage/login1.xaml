<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HydrateNow.FristPage.login1"
             Title="login1">
    <VerticalStackLayout Padding="10" >
        <Label Text="HydrateNow" TextColor="LightBlue" FontSize="Title" Padding="10" HorizontalOptions="Center" ></Label>
        <Label Text="Username or Email" Padding="10" ></Label>
        <Entry Placeholder="username or email"  ></Entry>
        <Label Text="Password" Padding="10" ></Label>
        <Entry Placeholder="password" ></Entry>
        <Label Text="Forget Password ?" TextColor="LightGray" Padding="10" HorizontalTextAlignment="End"></Label>
        <Button Text="LOGIN" Background="Gray" x:Name="GoTodatapage" Clicked="GoTodatapage_Clicked" ></Button>
    </VerticalStackLayout>
</ContentPage>